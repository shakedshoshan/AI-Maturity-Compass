{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile in the system.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Authentication."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        }
      },
      "required": ["uid", "email"]
    },
    "Assessment": {
      "title": "Assessment",
      "description": "An AI maturity assessment taken by a user for a school.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The UID of the user who took the assessment."
        },
        "schoolName": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "role": {
          "type": "string"
        },
        "answers": {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        "totalScore": {
          "type": "number"
        },
        "level": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["uid", "schoolName", "city", "role", "answers", "totalScore", "level", "createdAt"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public user profile information."
    },
    "/assessments/{assessmentId}": {
        "schema": {
            "$ref": "#/entities/Assessment"
        },
        "description": "Stores assessment records."
    }
  }
}
